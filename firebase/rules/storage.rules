rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Make QR codes publicly accessible
    match /qrcodes/{restaurantId}/{tableId} {
      // Allow public read access to QR codes
      allow read;
      // Allow write from cloud functions 
      allow write: if request.auth != null;
    }
    
    // Default rule - require authentication for access
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
